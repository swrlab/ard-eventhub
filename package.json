{
	"name": "ard-eventhub",
	"version": "1.10.2",
	"description": "ARD system to distribute real-time (live) metadata for primarily radio broadcasts.",
	"main": "./src/ingest/index.ts",
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0",
		"bun": ">= 1.0.0"
	},
	"scripts": {
		"docs:serve": "docsify serve . --port 3000",
		"coreId": "bun run ./src/coreId/index.ts",
		"ingest:local": "bun run --env-file=.env --env-file=./node_modules/nodemon/bin/nodemon ./src/ingest/index.ts",
		"ingest:cloud": "bun run ./src/ingest/index.ts",
		"ingest:test:local": "jest",
		"ingest:test": "jest --ci --forceExit",
		"lint": "biome lint",
		"docker:build": "docker build . -t swr/ard-eventhub",
		"docker:run": "docker run --env-file .env -p 8080:8080 --name ard-eventhub swr/ard-eventhub",
		"docker:scan": "bun docker:build && docker scout quickview",
		"docker:clean": "docker rm ard-eventhub",
		"openapi:format": "bunx biome format openapi.json --write && bunx prettier openapi.yaml -w",
		"license": "bunx license-compliance -f json -r detailed",
		"reinstall": "rm -rf node_modules && rm bun.lockb && bun install"
	},
	"keywords": [
		"ard",
		"metadata",
		"pubsub"
	],
	"author": "SWR Audio Lab <lab@swr.de>",
	"license": "EUPL-1.2",
	"dependencies": {
		"@google-cloud/datastore": "^10.0.1",
		"@google-cloud/pubsub": "^5.1.0",
		"@google-cloud/secret-manager": "^6.0.1",
		"@swrlab/utils": "^2.1.0",
		"@types/jest": "^30.0.0",
		"@types/supertest": "^6.0.3",
		"compression": "^1.8.0",
		"dd-trace": "^5.57.1",
		"dotenv": "^17.2.0",
		"express": "^4.21.2",
		"express-openapi-validator": "^5.5.7",
		"firebase-admin": "^12.7.0",
		"google-auth-library": "^10.1.0",
		"jsonwebtoken": "^9.0.2",
		"luxon": "^3.6.1",
		"slug": "^9.1.0",
		"supertest": "^7.1.3",
		"swagger-ui-express": "^5.0.1",
		"ts-jest": "^29.4.0",
		"typescript": "^5.8.3",
		"ulid": "^3.0.1",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.6",
		"@swrlab/style-guide": "^1.0.3",
		"@types/compression": "^1.7.5",
		"@types/dd-trace": "^0.9.3",
		"@types/luxon": "^3.6.2",
		"@types/slug": "^5.0.9",
		"@types/swagger-ui-express": "^4.1.8",
		"chai": "^4.5.0",
		"chai-http": "^4.4.0",
		"docsify-cli": "^4.4.4",
		"license-compliance": "^3.0.1",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"got": "^11.8.6",
		"strip-ansi": "^6.0.1",
		"update-notifier": "^5.1.0"
	},
	"type": "module",
	"prettier": "@swrlab/style-guide/prettier"
}
